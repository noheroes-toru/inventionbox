<h1>ランキング</h1>
<div class="top-rank">
  <% lastLike = 0 %>
  <% j = 1 %>
  <% @all_ranks.each.with_index(1) do |post, i| %>
    <% if i == 1 %>
      <% lastLike = post.likes.count %>
    <% end %>
    <% if post.likes.count != lastLike %>
    <% j = i %>

      <div class="card" style="width: 18rem;">
        <div class="card-body">
          第<%= j %>位
          <h5 class="card-title"><%= post.title %></h5>
          投稿日時：<%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
          <p class="card-text"><%= post.content %></p>
          <%= button_to 'いいね', post_likes_path(post) %>
        </div>
      <% else %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            第<%= j %>位
            <h5 class="card-title"><%= post.title %></h5>
            投稿日時：<%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
            <p class="card-text"><%= post.content %></p>
            <%= button_to 'いいね', post_likes_path(post) %>
          </div>
      <% end %>
    </div>
  <% end %>
</div>
